<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".ui.RepoDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/repoUserCardViewImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="75dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/repoUserImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/repoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name of User"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repoUserCardViewImg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/repoProjectLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:linksClickable="true"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:autoLink="web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repoName"
        tools:text="ProjectLink Here" />

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/repoDescription"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:text="Repository Description here"
       android:textColor="@color/black"
       android:textSize="16sp"
       android:layout_marginTop="10dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/repoProjectLink"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/repoProgrammingLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Programming Language"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repoDescription"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/repoNumberOfStars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Programming Language"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repoProgrammingLang"/>


</androidx.constraintlayout.widget.ConstraintLayout>
